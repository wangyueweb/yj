/* pages/authorize/authorize.wxss */
@import "../../app.wxss"; 

.Popup{width:750rpx;background-color:#fff;position:fixed;bottom: 0;left:0;z-index:320;}

.Popup .title{font-size:28rpx;color:#000;padding: 20rpx 20rpx;display: flex;align-items: center;}
.Popup .title image{width: 44rpx;height: 44rpx;margin-right: 20rpx;}
.Popup .tips{font-size:30rpx;color:#000;padding:0 20rpx;font-weight: 700;}

.Popup .bottom .item{width:50%;height:80rpx;background-color:#eeeeee;text-align:center;line-height:80rpx;font-size:24rpx;color:#666;margin-top:54rpx;}
.Popup .bottom .item.on{width: 100%}
.Popup .button-wrapper{
  display: flex;
}

.Popup .button-wrapper .button{
  margin: 20rpx;
}
.Popup .button .item.grant{font-size:28rpx;color:#fff;font-weight:bold;background-color:#e93323;border-radius:0;padding:0;}
.mask{position:fixed;top:0;right:0;left:0;bottom:0;background-color:rgba(0,0,0,0.65);z-index:310;}